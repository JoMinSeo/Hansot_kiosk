<Window x:Class="Hansot_kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hansot_kiosk"
        xmlns:control="clr-namespace:Hansot_kiosk.Control"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="한솥 키오스크"
        Width="1920"
        Height="1080"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#373737">
            <DockPanel>
                <TextBlock Text="asdf" FontSize="90" Foreground="White" DockPanel.Dock="Right" TextAlignment="Right" Width="500"/>
                <Image />
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1" x:Name="CtrlGrid">
            <control:ReadyCtrl x:Name="readyCtrl" Visibility="Collapsed"/>
            <control:OrderCtrl x:Name="orderCtrl" Visibility="Visible"/>
        </Grid>
    </Grid>
</Window>
