<UserControl x:Class="Hansot_kiosk.Control.PlaceCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hansot_kiosk.Control"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Background="White">
        <Grid>
            <Label Content="식사장소를 선택하여주세요." HorizontalAlignment="Left" FontSize="52" Margin="40,40,0,0" VerticalAlignment="Top"/>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="매장식사" HorizontalAlignment="Center" Margin="0,0,50,0" VerticalAlignment="Center" Width="300" Height="300" Background="#F6CA00"/>
            <Button Content="포장주문" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="300" Height="300" Background="#F6CA00"/>
        </StackPanel>
        <Grid>
            <Button Content="이전" Margin="0,0,0,50" VerticalAlignment="Bottom" Width="200" Height="70" Background="#D9D9D9"/>
        </Grid>
    </Grid>
</UserControl>
